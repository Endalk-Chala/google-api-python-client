import requests

def analyze_comment_with_perspective_api(comment):
    url = "https://commentanalyzer.googleapis.com/v1alpha1/comments:analyze?key=YOUR_API_KEY"
    data = {
        "comment": {"text": comment},
        "languages": ["en"],
        "requestedAttributes": {"TOXICITY": {}}
    }
    
    response = requests.post(url, json=data)
    toxicity_score = response.json()['attributeScores']['TOXICITY']['summaryScore']['value']

    return toxicity_score
